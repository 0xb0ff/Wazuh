  <rule id="100103" level="15">
    <decoded_as>linux_command</decoded_as>
    <location>/var/log/cmdline</location> <!-- Comment for testing with wazuh-logtest -->
    <field name="command" type="pcre2">php\s+-r\s+['"].*fsockopen\(\s*["'](?:\d{1,3}\.){3}\d{1,3}["']\s*,\s*\d{1,5}\s*\)</field>
    <description>Possible Reverse Shell Command Detected (php)</description>
    <mitre>
      <id>T1059.004</id>
      <id>T1059.006</id>
      <id>T1219</id>
      <id>T1105</id>
    </mitre>
    <group>command_execution,reverse_shell,attack</group>
  </rule>
